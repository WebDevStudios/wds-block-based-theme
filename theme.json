{
	"$schema": "https://schemas.wp.org/wp/6.2/theme.json",
	"version": 2,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "strong-magenta",
					"color": "#a156b4",
					"name": "Strong magenta"
				},
				{
					"slug": "very-light-gray",
					"color": "#f1f1f1",
					"name": "Very light gray"
				}
			]
		},
		"typography": {
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.5rem"
				},
				{
					"slug": "regular",
					"size": "1rem"
				},
				{
					"slug": "large",
					"size": "2rem"
				}
			],
			"fontFamilies": []
		},
		"custom": {
			"lineHeight": {
				"small": "1.3",
				"medium": "2",
				"large": "2.5"
			}
		},
		"blocks": []
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--very-light-gray)"
		},
		"blocks": {
			"core/heading": {
				"elements": {
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--large)",
							"lineHeight": "var(--wp--preset--line-height--medium)"
						},
						"color": {
							"text": "var( --wp--preset--color--strong-magenta )"
						}
					}
				}
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "calc(10px * var(--wp--preset--font-size--regular)"
				}
			},
			"core/group": {
				"color": {
					"background": "#ffffff"
				}
			}
		}
	}
}